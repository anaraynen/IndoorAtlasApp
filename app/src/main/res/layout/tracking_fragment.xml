<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  android:id="@+id/simple_tracker_fragment"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:paddingBottom="@dimen/activity_vertical_margin"
  android:paddingLeft="@dimen/activity_horizontal_margin"
  android:paddingRight="@dimen/activity_horizontal_margin"
  android:paddingTop="@dimen/activity_vertical_margin"
  tools:context="com.ameer.android.androidMapAmeerCW.IndoorMapActivity">

  <TextView
    android:text="@string/loc_text"
    android:textSize="24sp"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:id="@+id/current_loc_label"
    android:layout_alignParentStart="true"
    android:layout_marginTop="24dp"/>
  <TextView
    android:text=""
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/current_loc_label"
    android:layout_marginTop="24dp"
    android:id="@+id/current_loc" />

  <Button
    android:text="@string/start_loc_log"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="96dp"
    android:layout_below="@+id/current_loc"
    android:id="@+id/start_loc_log"
    android:enabled="false" />

  <Button
    android:text="@string/stop_loc_log"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:id="@+id/stop_loc_log"
    android:layout_below="@+id/start_loc_log"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp"
    android:layout_marginTop="24dp"
    android:enabled="false" />

</RelativeLayout>
